@model Domain.CustomerChat
@{
    ViewData["Title"] = "Index";
}
    <head>
        <script src="https://sdk.amazonaws.com/js/aws-sdk-2.41.0.min.js"></script>
        <script src="~/js/chatbot/jquery-1.10.2.js" type="text/javascript"></script>
        <script src="~/js/chatbot/jquery-ui-1.10.4.custom.min.js" type="text/javascript"></script>
    </head>
<h2>Welcome @Model.Customer.FirstName</h2>

<center>
    <h3>Is something wrong with your system? Click on the button below to get started!</h3>
    <li><a asp-area="" asp-controller="Customer" asp-action="Service">Service Call</a></li>


    <h3>Just need your seasonal check up? Click on the button below to get started!</h3>
    <li><a asp-area="" asp-controller="Customer" asp-action="Checks">Seasonal Check</a></li>
</center>


<div id="conversation"style="width: 400px; height: 450px; border: 2px solid gray;background-color: #ffffff; overflow: scroll;object-position:bottom">
    <dl>
        @foreach (var ChatMsg in Model.ChatBotMessage)
        {
            if (ChatMsg.MsgType == Domain.MessageType.UserMessage)
            {
                <dt class="userRequest">@ChatMsg.ChatMessage</dt>
            }
            else
            {
                <dd class="lexResponse">@ChatMsg.ChatMessage</dd>
            }
            
        }
    </dl>
</div>

@using (Html.BeginForm("ProcessChatMessage", "Customer"))
{

